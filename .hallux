backends:
    - cache: # short-name, used in command-line
        type: dummy # type : dummy / openai / hallux
        filename: dummy.json

    - free:
        type: hallux
        url: https://free-trial.hallux.dev/api/v1
        token:

    - gpt3:
        type: openai
        model: gpt-3.5-turbo
        max_tokens: 4096

    - gpt3-long:
        type: openai
        model: gpt-3.5-turbo-16k
        max_tokens: 16384

    - gpt4:
        type: openai
        model: gpt-4
        max_tokens: 8192

    - gpt4-long:
        type: openai
        model: gpt-4-32k
        max_tokens: 32768

python:
    ruff: . # command-line arguments for ruff
    mypy: --ignore-missing-imports . # command-line arguments for mypy

sonar:
    url: https://sonarqube.hallux.dev
    success_test: ./hallux-test.sh -x
    project: halluxai_hallux_AYmdJxzWKwloFfC93W7m

